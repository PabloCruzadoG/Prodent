<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow>
            <TextView
                android:text="Día"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="start"/>
            <TextView
                android:text="Horario"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="start"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="Lunes a Viernes"
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="start"/>
            <TextView
                android:text="8:00 AM - 6:00 PM"
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="start"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="Sábado"
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="start"/>
            <TextView
                android:text="9:00 AM - 1:00 PM"
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="start"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="Domingo"
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="start"/>
            <TextView
                android:text="Cerrado"
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="start"/>
        </TableRow>

    </TableLayout>
</LinearLayout>