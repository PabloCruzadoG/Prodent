<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- ✅ Estilo simple para CalendarView -->
    <style name="CalendarViewCustom">
        <item name="android:background">@drawable/calendar_background</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- ✅ Estilo simple para chips de horarios -->
    <style name="HorarioChipStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:background">@drawable/chip_horario_selector</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>